{
  "compilerOptions": {
    "target": "ES2022", // top-level await, etc
    "module": "NodeNext", // compat√≠vel com ESM
    "moduleResolution": "NodeNext", // resolve imports ESM
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
